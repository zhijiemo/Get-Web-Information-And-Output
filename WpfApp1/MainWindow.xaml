<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="NotifacationListBox" Margin="62,87,306,85" RenderTransformOrigin="0.5,0.5" SelectionChanged="NotifacationListBox_SelectionChanged">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Button x:Name="LoadButton" Content="加载" HorizontalAlignment="Left" Margin="62,37,0,0" VerticalAlignment="Top" Width="75" Click="LoadButton_Click"/>
        <TextBox x:Name="AddressTextBox" TextWrapping="Wrap" Text="http://dean.xjtu.edu.cn/jxxx/xwdt.htm" VerticalAlignment="Top"/>

    </Grid>
</Window>
